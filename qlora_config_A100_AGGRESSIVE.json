{
  "model_config": {
    "model_name": "google/gemma-3-1b-it",
    "use_cache": false,
    "trust_remote_code": true,
    "torch_dtype": "bfloat16"
  },
  "quantization_config": {
    "load_in_4bit": true,
    "bnb_4bit_compute_dtype": "bfloat16",
    "bnb_4bit_quant_type": "nf4",
    "bnb_4bit_use_double_quant": true
  },
  "qlora_config": {
    "r": 32,
    "lora_alpha": 64,
    "lora_dropout": 0.05,
    "bias": "none",
    "task_type": "CAUSAL_LM",
    "target_modules": [
      "q_proj",
      "k_proj",
      "v_proj",
      "o_proj",
      "gate_proj",
      "up_proj",
      "down_proj"
    ]
  },
  "dataset_config": {
    "train_file": "data/train_pmb.json",
    "eval_file": "data/eval_pmb.json",
    "max_length": 512,
    "text_field": "text"
  },
  "training_args": {
    "output_dir": "../outputs/gemma-pmb-aggressive",
    "overwrite_output_dir": true,
    "num_train_epochs": 5,
    "per_device_train_batch_size": 4,
    "per_device_eval_batch_size": 8,
    "gradient_accumulation_steps": 16,
    "gradient_checkpointing": true,
    "optim": "paged_adamw_8bit",
    "learning_rate": 5e-5,
    "weight_decay": 0.01,
    "max_grad_norm": 0.3,
    "lr_scheduler_type": "cosine",
    "warmup_ratio": 0.1,
    "eval_strategy": "steps",
    "eval_steps": 20,
    "save_strategy": "steps",
    "save_steps": 20,
    "save_total_limit": 5,
    "load_best_model_at_end": true,
    "metric_for_best_model": "eval_loss",
    "logging_strategy": "steps",
    "logging_steps": 5,
    "report_to": "tensorboard",
    "bf16": true,
    "bf16_full_eval": true,
    "dataloader_num_workers": 4,
    "group_by_length": true,
    "ddp_find_unused_parameters": false
  }
}
